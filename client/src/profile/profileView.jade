h2 Your Profile

img(src='{{ picture }}')

form(ng-submit="processForm()")
    div.input
        h3 {{ name }}

    div.input
        h3 Location
        //- input(type="text", name ="user-location" ng-model="formData.user_location")
        
    div.input
        h3 What Activities Do You Like?
        label
            input(type="checkbox", ng-model="formData.activities.hiking")
            = "Hiking"
        label
            input(type="checkbox", ng-model="formData.activities.climbing")
            = "Climbing"
        label
            input(type="checkbox", ng-model="formData.activities.biking")
            = "Biking"
        label
            input(type="checkbox", ng-model="formData.activities.running")
            = "Running"
    div.actions
        input(type="submit" class='btn btn-primary' value="Add")

pre {{ formData }}
